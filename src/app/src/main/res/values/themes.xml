<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LikeyListy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryGreen</item>
        <item name="colorPrimaryVariant">@color/primaryGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryGreen</item>
        <item name="colorSecondaryVariant">@color/primaryGreen</item>
        <item name="colorOnSecondary">@color/primaryGreen</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryGreen</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarTheme" tools:targetApi="l">@color/primaryGreen</item>


    </style>

    <style name="Theme.LikeyListy.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryGreen</item>
        <item name="colorPrimaryVariant">@color/primaryGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryGreen</item>
        <item name="colorSecondaryVariant">@color/primaryGreen</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryGreen</item>
    </style>

    <style name="Theme.LikeyListy.HomeScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryGreen</item>
        <item name="colorPrimaryVariant">@color/primaryGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryGreen</item>
        <item name="colorSecondaryVariant">@color/primaryGreen</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:actionBarTheme" tools:targetApi="l">@color/black</item>
    </style>

    <style name="Theme.LikeyListy.Item.Checked" parent="Theme.LikeyListy">
        <item name="strokeColor">#885543</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryGreen</item>
    </style>

    <style name="Theme.LikeyListy.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryGreen</item>
    </style>

    <style name="Theme.LikeyListy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LikeyListy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>